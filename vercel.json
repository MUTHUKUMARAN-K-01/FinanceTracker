{
  "version": 2,
  "buildCommand": "npm install --force && npm run build",
  "installCommand": "npm install --force",
  "outputDirectory": "client/dist",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install --force"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
} 